<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns="http://schemas.microsoft.com/xrm/2017/pcf">
  <control
    namespace="LegalTechOps"
    constructor="SubEntityGridImage"
    version="0.0.2"
    display-name-key="SubEntityGridImage"
    description-key="SubEntityGridImage description"
    control-type="dataset">

    <!-- No external calls -->
    <external-service-usage enabled="false" />

    <!-- Bind to a subgrid (dataset-bound PCF) and show OOB chrome -->
    <data-set
      name="subgridDataSet"
      display-name-key="Subgrid_DataSet_Display_Key"
      cds-data-set-options="displayCommandBar:true;displayViewSelector:true;displayQuickFind:true">

      <!-- Makers MUST choose a lookup column from the child table
           whose target's image (entityimage/URL) weâ€™ll render -->
      <property-set
        name="lookupImageColumn"
        display-name-key="LookupImageColumn_Display_Key"
        description-key="LookupImageColumn_Desc_Key"
        of-type="Lookup.Simple"
        usage="input"
        required="true" />
    </data-set>

    <resources>
      <code path="index.ts" order="1" />
      <resx path="strings/SubEntityGridImage.1033.resx" version="1.0.0" />
    </resources>

    <feature-usage>
      <!-- Needed to retrieve the lookup target's image fields -->
      <uses-feature name="WebAPI" required="true" />
    </feature-usage>
  </control>
</manifest>
